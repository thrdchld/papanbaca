{
  "name": "papanbaca",
  "version": "0.2.0",
  "description": "PapanBaca â€” Belajar Membaca Anak (Portable)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder --win --publish never"
  },
  "build": {
    "appId": "id.thrdchld.papanbaca",
    "productName": "PapanBaca",
    "files": [
      "index.html",
      "main.js",
      "manifest.json",
      "service-worker.js",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "portable": {
      "artifactName": "PapanBaca-${version}-Portable.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  }
}